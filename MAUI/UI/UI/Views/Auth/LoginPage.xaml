<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:UI.ViewModels.Auth"
    x:Class="UI.Views.Auth.LoginPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">



    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

                

                <!-- Título -->
                <Label Text="Bienvenido/a"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="Inicia sesión para continuar"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="Gray" />

                <!-- Usuario -->
                <Frame CornerRadius="8" Padding="12,0" HasShadow="False" BorderColor="Gray">
                    <Entry Placeholder="Usuario"
                           Text="{Binding Username}"
                           BackgroundColor="Transparent"
                           HeightRequest="48" />
                </Frame>

                <!-- Contraseña -->
                <Frame CornerRadius="8" Padding="12,0" HasShadow="False" BorderColor="Gray">
                    <Entry Placeholder="Contraseña"
                           IsPassword="True"
                           Text="{Binding Password}"
                           BackgroundColor="Transparent"
                           HeightRequest="48" />
                </Frame>



                <!-- Botón login -->
                <Button Text="Iniciar sesión"
                        Command="{Binding LoginCommand}"
                        HeightRequest="48"
                        BackgroundColor="#1447E6"
                        TextColor="White"
                        CornerRadius="10" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Versión de la app -->
        <Label Grid.Row="1"
               Text="{Binding AppVersion}"
               FontSize="10"
               TextColor="Gray"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,10" />




    </Grid>
</ContentPage>
